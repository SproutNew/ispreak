<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.lism1.activity.MessageActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/message_2"
            android:layout_width="150sp"
            android:layout_height="40sp"
            android:textColor="#000000"
            android:clickable="true"
            android:text="备注"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/message_1" />

        <TextView
            android:id="@+id/message_3"
            android:layout_width="70sp"
            android:layout_height="30sp"
            android:textColor="#000000"
            android:clickable="true"
            android:text="用户名:"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4sp"
            android:textSize="20sp"
            android:layout_below="@+id/message_2"
            android:layout_toEndOf="@+id/message_1" />
        <TextView
            android:id="@+id/message_4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:clickable="true"
            android:text="内容"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="4sp"
            android:textSize="20sp"
            android:layout_below="@+id/message_2"
            android:layout_toEndOf="@+id/message_1" />

        <TextView
            android:id="@+id/message_5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:clickable="true"
            android:layout_marginTop="10sp"
            android:text="时间"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/message_2" />

        <com.example.asus.lism1.utils.CircularImage
            android:id="@+id/message_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="42dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
