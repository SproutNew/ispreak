<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.lism1.activity.MyActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@drawable/border1"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/my2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:clickable="true"
            android:text="用户名"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my1"
            android:layout_marginStart="21dp" />

        <com.example.asus.lism1.utils.CircularImage
            android:id="@+id/my1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:foregroundGravity="center"
            android:src="@mipmap/my"
            android:layout_marginStart="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/border1"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/my6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:clickable="true"
            android:text="消息设置"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my5" />

        <ImageView
            android:id="@+id/my5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foregroundGravity="center"
            android:src="@mipmap/message"
            android:layout_marginStart="51dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r3"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/border1"
        android:layout_below="@+id/r1"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/my8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:clickable="true"
            android:text="关于我们"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my7" />

        <ImageView
            android:id="@+id/my7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/about"
            android:layout_marginStart="53dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r4"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/border1"
        android:clickable="true"
        android:layout_below="@+id/r3"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/my10"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="退出登录"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my9"/>

        <ImageView
            android:id="@+id/my9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/logout"
            android:layout_marginStart="51dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/border1"
        android:layout_below="@+id/r2"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/my4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:clickable="true"
            android:text="意见反馈"
            android:layout_marginLeft="20dp"
            android:textSize="30sp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/my3" />

        <ImageView
            android:id="@+id/my3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/idea"
            android:layout_marginStart="51dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

</RelativeLayout>
