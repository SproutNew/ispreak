<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asus.lism1">

    <!-- 授予该程序录制声音的权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!-- 授予该程序向外部存储器写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tubiao"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.GuideActivity" />
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity android:name=".activity.MessageActivity" />
        <activity android:name=".activity.MyActivity" />
        <activity android:name=".activity.BattleActivity" />
        <activity android:name=".activity.RegisterActivity" />
        <activity android:name=".activity.SoundActivity" />
        <activity android:name=".activity.AddSoundActivity">

            <!-- 授予该程序录制声音的权限 -->
            <uses-permission android:name="android.permission.RECORD_AUDIO" />
            <!-- 授予该程序向外部存储器写入数据的权限 -->
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </activity>
        <activity android:name=".my.IdeaActivity" />
        <activity android:name=".activity.ChatActivity"></activity>
    </application>

</manifest>